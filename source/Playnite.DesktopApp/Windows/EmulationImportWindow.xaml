<controls:WindowBase x:Class="Playnite.DesktopApp.Windows.EmulationImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:prism="clr-namespace:Prism.Interactivity;assembly=Prism.Wpf"
        xmlns:p="clr-namespace:Playnite;assembly=Playnite"
        xmlns:pcon="clr-namespace:Playnite.Converters;assembly=Playnite"
        xmlns:controls="clr-namespace:Playnite.Controls;assembly=Playnite"
        xmlns:pvm="clr-namespace:Playnite.DesktopApp.ViewModels"
        xmlns:pm="clr-namespace:Playnite.SDK.Models;assembly=Playnite.SDK"
        xmlns:pbeh="clr-namespace:Playnite.Behaviors;assembly=Playnite"             
        mc:Ignorable="d"
        d:DesignStyle="{StaticResource WindowDesignStyle}"
        Style="{DynamicResource StandardWindowStyle}"
        Title="{DynamicResource LOCEmuWizardWindowTitle}" WindowStartupLocation="CenterOwner"
        Height="600" Width="800" x:Name="WindowEmulatorImport"
        AutomationProperties.AutomationId="WindowEmulatorImport">

    <controls:WindowBase.Resources>
        <pcon:NegateConverter x:Key="NegateConverter" />
        <pcon:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" />
        <pcon:ListToStringConverter x:Key="ListToStringConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}" />
    </controls:WindowBase.Resources>

    <DockPanel>
        <DockPanel.Resources>
            <p:BindingProxy x:Key="Proxy" Data="{Binding}" />
        </DockPanel.Resources>

        <Border DockPanel.Dock="Bottom" BorderThickness="0,1,0,0" BorderBrush="{StaticResource NormalBorderBrush}">
            <DockPanel KeyboardNavigation.TabNavigation="Local" LastChildFill="False" Margin="5">
                <Button Content="{DynamicResource LOCCloseLabel}" DockPanel.Dock="Right"
                        Style="{StaticResource BottomButton}" />
                <Button Content="{DynamicResource LOCNextLabel}" DockPanel.Dock="Right"
                        Style="{StaticResource BottomButton}" />
                <Button Content="{DynamicResource LOCBackLabel}" DockPanel.Dock="Right"
                        Style="{StaticResource BottomButton}" />
            </DockPanel>
        </Border>
        
        <TabControl DockPanel.Dock="Top" OverridesDefaultStyle="True">
            <TabControl.Style>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <TabPanel IsItemsHost="True" />
                                    <ContentPresenter ContentSource="SelectedContent" />
                                </Grid>                                    
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>                        
                </Style>
            </TabControl.Style>
            <TabItem Header="WizardIntro" Visibility="Collapsed">
         
            </TabItem>

            <TabItem Header="EmuSelection" Visibility="Collapsed">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Select platform:" Grid.Column="0" Margin="4,0,4,2"/>
                    <TextBlock Text="Select emulator:" Grid.Column="1" Margin="4,0,4,2"/>
                    <TextBlock Text="Select emulator profile:" Grid.Column="2" Margin="4,0,4,2"/>
                    
                    <ListBox Grid.Column="0" Grid.Row="1" Margin="4,0,4,2" />
                    <ListBox Grid.Column="1" Grid.Row="1" Margin="4,0,4,2" />
                    <ListBox Grid.Column="2" Grid.Row="1" Margin="4,0,4,2" />
                </Grid>                
            </TabItem>

            <TabItem Header="RomList" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" Margin="4">
                        
                    </DataGrid>


                    <DockPanel Grid.Row="1">
                        <Button Content="Scan" VerticalAlignment="Center" Margin="5"
                                Command="{Binding ScanDirectoryCommand}"/>
                        <TextBlock Text="Directory to scan:" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5" />
                        <Button Content="..." DockPanel.Dock="Right" VerticalAlignment="Center" Margin="5" />
                        <TextBox DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5"
                                 Text="{Binding DirToScan}"/>
                    </DockPanel>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Import games" VerticalAlignment="Center" Margin="5" />
                        <CheckBox Content="Add directory to auto-scan list" VerticalAlignment="Center" Margin="5" />
                    </StackPanel>
                </Grid>
      
            </TabItem>
        </TabControl>


    </DockPanel>
</controls:WindowBase>
